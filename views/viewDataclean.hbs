<h2>{{title}}</h2>
<form method="GET" style="margin-bottom:20px;">
  Search by ID: 
  <input type="text" name="searchId" value="{{query.searchId}}">
  Search by Name: 
  <input type="text" name="searchName" value="{{query.searchName}}">
  Price Min: 
  <input type="number" step="1" name="minPrice" value="{{query.minPrice}}">
  Price Max: 
  <input type="number" step="1" name="maxPrice" value="{{query.maxPrice}}">
  <button type="submit">Search</button>
</form>

<table border="1">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Host Name</th>
      <th>Price</th>
      <th>Thumbnail</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each listings}}
      <tr>
        <td>{{id}}</td>
        <td>{{showName name}}</td>
        <td>{{hostname}}</td>
        <td>{{showPrice price}}</td>
        <td>
          {{#if image}}
            <img src="{{image}}" width="80" />
          {{else}}No image{{/if}}
        </td>
        <td>
          <div class="action-buttons">
            <a href="/property/{{id}}" class="btn-view">View</a>
            <a href="/update-property/{{id}}" class="btn-update">Update</a>
            <form method="POST" action="/delete-property/{{id}}" style="display:inline;">
              <button type="submit" class="btn-delete" onclick="return confirm('Are you sure you want to delete this property?')">Delete</button>
            </form>
          </div>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>

<div class="pagination">
  {{#if prevPage}}
    <a href="/viewDataclean?page={{prevPage}}">Previous</a>
  {{/if}}
  {{#if nextPage}}
    <a href="/viewDataclean?page={{nextPage}}">Next</a>
  {{/if}}
  <span>Page {{page}} of {{totalPages}}</span>
</div>