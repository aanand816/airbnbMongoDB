<h2>{{title}}</h2>
<form method="POST">
  <label>Min Price: <input type="number" name="min" value="{{min}}" required></label>
  <label>Max Price: <input type="number" name="max" value="{{max}}" required></label>
  <button type="submit">Search</button>
</form>

{{#if errors}}
  <ul class="error">
    {{#each errors}}
      <li>{{msg}}</li>
    {{/each}}
  </ul>
{{/if}}

{{#if results}}
  {{#if results.length}}
    <table border="1">
      <thead>
        <tr>
          <th>ID</th><th>Name</th><th>Host Name</th><th>Price</th><th>Thumbnail</th><th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {{#each results}}
          <tr>
            <td>{{id}}</td>
            <td>{{showName name}}</td>
            <td>{{hostname}}</td>
            <td>{{price}}</td>
            <td>
              {{#if image}}
                <img src="{{image}}" width="80" />
              {{else}}No image{{/if}}
            </td>
            <td>
              <div class="action-buttons">
                <a href="/property/{{id}}" class="btn-view">View</a>
                <a href="/update-property/{{id}}" class="btn-update">Update</a>
                <form method="POST" action="/delete-property/{{id}}" style="display:inline;">
                  <button type="submit" class="btn-delete" onclick="return confirm('Are you sure you want to delete this property?')">Delete</button>
                </form>
              </div>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
    <div class="pagination">
      {{#if (gt page 1)}}
        <a href="/viewDataprice?min={{min}}&max={{max}}&page={{dec page}}">Previous</a>
      {{/if}}
      {{#if (lt page totalPages)}}
        <a href="/viewDataprice?min={{min}}&max={{max}}&page={{inc page}}">Next</a>
      {{/if}}
      <span>Page {{page}} of {{totalPages}}</span>
    </div>
  {{else}}
    <p>No properties found in that price range.</p>
  {{/if}}
{{/if}}
